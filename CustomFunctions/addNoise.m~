function syntheticDATA_trialWithNoise = addNoise(syntheticDATA_trial, noisePercent)
s = (noisePercent/100) .* syntheticDATA_trial;
noiseComponent = (randn() .* s);
syntheticDATA_trialWithNoise =  syntheticDATA_trial + noiseComponent;

%{
    m = [ 1.05 ; 0.2561 ; 0.3321 ];
    s = 0.2 * m ;
    N = 1000;
    x =  ones(N,1) * m'  +  randn(N,3) * diag(s)
%}
end

