% AUTHOR: Kambadur Ananthamurthy
% Run this function to collect outputs from independent jobs and
% consolidate them into one file.
% cDate: Harvest Date
% cRun: Harvest Number

function consolidateRealBatch(cDate, cRun, workingOnServer)

tic

if workingOnServer
    HOME_DIR = '/home/bhalla/ananthamurthy/';
    ANALYSIS_DIR = strcat(HOME_DIR, 'Work/Analysis');
else
    HOME_DIR = '/Users/ananth/Documents/';
    HOME_DIR2 = '/Users/ananth/Desktop/';
    ANALYSIS_DIR = strcat(HOME_DIR2, 'Work/Analysis');
end

addpath(strcat(HOME_DIR, '/MATLAB/ImagingAnalysis/Suite2P-ananth/localCopies'))
addpath(genpath(strcat(HOME_DIR, '/MATLAB/CustomFunctions'))) % my custom functions

disp('Loading main dataset details ...')
make_dbase
disp('... done!')

disp('Setting up parameters for harvest ...')
setupHarvestParamsforRealData
disp('... done!')

for dataseti = 1:nDatasets
for job = 1:length(params)
    fprintf('Parsing output from job: %i\n', job)
    saveFolder = strcat(ANALYSIS_DIR, '/Imaging/', dbase(job).mouseName, '/', dbase(job).date, '/');
    mouseName = dbase(job).mouseName;
    date = dbase(job).date;
    jobData = harvestAnalyzedRealData(mouseName, date, params(job), saveFolder);
    if strcmpi(params(job).methodList, 'A')
        cData.methodA.mAOutput_batch(1:params(job).nDatasets) = jobData.mAOutput_batch(1:params(job).nDatasets);
    elseif strcmpi(params(job).methodList, 'B')
        cData.methodB.mBOutput_batch(1:params(job).nDatasets) = jobData.mBOutput_batch(1:params(job).nDatasets);
    elseif strcmpi(params(job).methodList, 'C')
        cData.methodC.mCOutput_batch(1:params(job).nDatasets) = jobData.mCOutput_batch(1:params(job).nDatasets);
    elseif strcmpi(params(job).methodList, 'D')
        cData.methodD.mDOutput_batch(1:params(job).nDatasets) = jobData.mDOutput_batch(1:params(job).nDatasets);
    elseif strcmpi(params(job).methodList, 'E')
        cData.methodE.mEOutput_batch(1:params(job).nDatasets) = jobData.mEOutput_batch(1:params(job).nDatasets);
    elseif strcmpi(params(job).methodList, 'F')
        cData.methodF.mFOutput_batch(1:params(job).nDatasets) = jobData.mFOutput_batch(1:params(job).nDatasets);
    else
        error('Unknown method')
    end
end

filename = [dbase.mouseName '_' dbase.date '_realDataAnalysis_' num2str(cDate) '_cRun' num2str(cRun) '_cData.mat' ];
fullPath4Save = strcat(saveFolder, filename);

disp('Saving everything ...')

save(fullPath4Save, 'cData', '-v7.3')
%save(fullPath4Save, 'cData')
disp('... done!')

% %Information about new file
% h5info(filename, saveFolder)
% h5disp(filename, saveFolder)

toc
disp('All done!')

end